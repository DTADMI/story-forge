// Prisma schema for StoryForge

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VisibilityScope {
  PRIVATE
  FRIENDS
  PUBLIC_AUTHENTICATED
  PUBLIC_ANYONE
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  // Local auth
  passwordHash  String?

  // Profile
  username      String?  @unique
  bio           String?
  website       String?
  settings      Json?
  subscriptionStatus   String?
  subscriptionExpiresAt DateTime?

  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  inkPot        InkPot?
  inkTx         InkTx[]
  goals         Goal[]
  progressLog   ProgressLog[]
  followers     Follow[] @relation("followers")
  following     Follow[] @relation("following")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Project {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  title         String
  description   String?
  content       String?  @db.Text
  genre         String?
  isPublic      Boolean  @default(false)
  wordCount     Int      @default(0)
  defaultScope  VisibilityScope @default(PRIVATE)
  settings      Json?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Gamification models
model InkPot {
  id      String @id @default(cuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
  balance Int    @default(0)

  transactions InkTx[]
}

model InkTx {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  pot       InkPot?  @relation(fields: [potId], references: [id])
  potId     String?
  amount    Int
  reason    String
  metadata  Json?
  createdAt DateTime @default(now())
}

model Goal {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String   // e.g., 'words_per_day'
  target    Int      // e.g., 500
  cadence   String   // 'daily' | 'weekly'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  progress  ProgressLog[]
}

model ProgressLog {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  goal      Goal?    @relation(fields: [goalId], references: [id])
  goalId    String?
  value     Int
  timestamp DateTime @default(now())
}

// Social follow model
model Follow {
  id          String   @id @default(cuid())
  follower    User     @relation("following", fields: [followerId], references: [id])
  followerId  String
  followee    User     @relation("followers", fields: [followeeId], references: [id])
  followeeId  String
  createdAt   DateTime @default(now())

  @@unique([followerId, followeeId])
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
